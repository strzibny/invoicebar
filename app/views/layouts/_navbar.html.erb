<div class="navbar-container">
<div class="container">
<div class="navbar">
  <div class="navbar-inner">

      <a class="brand" href="/">
        <img src="/logo.png" width=50 height=50 />
      </a>
      <% if current_user %>
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li class="<%= active_for_controller('invoice') %>"><%= link_to t('invoice_bar.navbar.invoices'), invoices_path %></li>
            <li class="<%= active_for_controller('receipt') %>"><%= link_to t('invoice_bar.navbar.receipts'), receipts_path %></li>
            <li class="<%= active_for_controller('contact') %>"><%= link_to t('invoice_bar.navbar.contacts'), contacts_path %></li>
            <li class="<%= active_for_controller('account') %>"><%= link_to t('invoice_bar.navbar.accounts'), accounts_path %></li>
            <li class="<%= active_for_controller('settings') %>"><%= link_to t('invoice_bar.navbar.profile'), account_settings_path %></li>
            <% if current_user.administrator %>
              <li class="<%= active_for_controller('users') %>"><%= link_to t('invoice_bar.navbar.users'), users_path %></li>
              <li class="<%= active_for_controller('currencies') %>"><%= link_to t('invoice_bar.navbar.currencies'), currencies_path %></li>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <li><%= link_to t('invoice_bar.navbar.logout'), logout_path %></li>
          </ul>
          <%= form_tag search_path, method: 'get', class: "navbar-search pull-right" do %>
              <%= text_field_tag :search, params[:search], placeholder: t('invoice_bar.navbar.search'), class: 'search-query' %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
</div>
</div>
<div class="sub-navigation">
  <%= yield :sub_navigation %>
</div>
