<%# Address fields for an party in invoices#show %>

<div class="address">
  <div class="street-line">
    <div class="street">
      <%= address.street %> <%= address.street_number %>
    </div>
  </div>
  <div class="city-line">
    <div class="city">
      <%= formatted_postcode(address.postcode) %>
      <%= address.city %>
      <% if address.city_part && !address.city_part.empty? %>
        <br>
        <%= address.city_part %>
      <% end %>
    </div>
  </div>
  <div class="extra-address-line">
    <%= address.extra_address_line if address.extra_address_line && !address.extra_address_line.empty? %>
  </div>
</div>
