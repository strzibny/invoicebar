<%= content_for :sub_navigation do %>
  <ul class="nav nav-pills" style="float:right;">
    <li>
      <%= link_to t('titles.receipts'), receipts_path %>
    </li>
    <li class="active">
      <%= link_to t('titles.receipt_templates'), receipt_templates_path %>
    </li>
  </ul>
  <div class="btn-group"  style="float:left;">
    <a class="btn btn-success" href="<%= new_receipt_template_path %>">
      <i class="icon-pencil icon-white"></i> <%= t('links.new_receipt_template') %>
    </a>
  </div>
  <h1>
    <%= t('titles.receipt_templates') %>
  </h1>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th class="name"><%= t('attributes.receipt_template.name') %></th>
      <th class="contact_name"><%= t('attributes.receipt_template.contact_name') %></th>
      <th class="amount"><%= t('attributes.receipt_template.amount') %></th>
    </tr>
  </thead>
  <tbody>
    <% @receipt_templates.each do |receipt| %>
      <tr>
        <td class="name">
          <span><%= link_to receipt do %><%= receipt.name %><% end %></span>
        </td>
        <td class="contact_name">
          <span><%= receipt.contact_name %></span>
        </td>
        <td class="amount">
          <span><%= formatted_amount(receipt.amount, receipt.account.currency_symbol) %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @receipt_templates.size == 0 %>
  <div class="no-data">
    <%= t('invoice_bar.no_data') %>
  </div>
<% end %>

<%= paginate @receipt_templates %>
